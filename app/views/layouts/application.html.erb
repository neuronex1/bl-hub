<div id='email-modal'>
    <div class='text-xl text-center mbl'>Contact Us</div>
    <form  method="POST" action="https://formspree.io/bioluminescencehub@gmail.com">
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Email address" name="email">
        </div>
        <div class="form-group">
            <select class="form-control" name="subject">
                <option>Subject</option>
                <option>Constructs</option>
                <option>Emissaries</option>
                <option>MBL Practicum</option>
                <option>Questions</option>
                <option>Research Ideas</option>
                <option>Workshops</option>
                <option>Other</option>
            </select>
        </div>
        <div class="form-group">
            <label for="messageTextArea">Message:</label>
            <textarea name="message" class="form-control" id="messageTextArea" rows="6"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mb-2 mbl mtl">Submit</button>
        </div>
        <div id="form-close" class="text-xs text-center" style="color:grey;">Close</div>
    </form>
</div>
</html>
