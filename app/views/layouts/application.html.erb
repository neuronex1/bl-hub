    <script>
        $(document).ready(() => {
            $('.bl-logo--email').on('click', function() {
                $('#email-modal').addClass('visible');
            });
            $('#form-close').on('click', function() {
                $('#email-modal').removeClass('visible');
            });
        });
    </script>
